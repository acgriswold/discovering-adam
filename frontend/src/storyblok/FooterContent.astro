---
import { storyblokEditable } from "@storyblok/astro";
import RichTextRenderer from "@storyblok/astro/RichTextRenderer.astro";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";

const { blok } = Astro.props;
---

<div {...storyblokEditable(blok)} class="container grid md:grid-cols-3 gap-0 md:gap-8 prose max-w-none min-h-[240px]">
  <section class="flex flex-col">
    <RichTextRenderer richTextData={blok.left} />
  </section>

  <section class="flex flex-col">
    <RichTextRenderer richTextData={blok.center} />
  </section>

  <section class="flex flex-wrap not-prose mt-8 justify-center">
    {
      blok.socials?.map((blok) => {
        return <StoryblokComponent blok={blok} />;
      })
    }
  </section>
</div>
