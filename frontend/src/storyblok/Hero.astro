---
import { Wordmark } from "@/components/global/wordmark";
import { storyblokEditable } from "@storyblok/astro";

const { blok } = Astro.props;
---

<figure>
  <div class="filter">
    <div class="bottom" />
    <div class="noise" />
  </div>

  <Wordmark className="relative px-8 py-24 md:px-16 md:py-64" pathClassName="fill-gray-50" {...storyblokEditable(blok)} />
</figure>

<style>
  figure {
    @apply flex relative flex-col;
  }

  .filter {
    background: radial-gradient(80% 32% at 50% 70%,hsla(0, 0%, 100%, 0.144) 0,hsla(0, 0%, 100%, 0.027) 47%), 
                radial-gradient(97% 27% at 50% 80%,hsla(0, 0%, 100%, 0.384) 0,hsla(0,0%,100%,0) 47%), 
                linear-gradient(180deg,#141414 5%,#0b0b0b);
                
    @apply absolute bottom-0 w-full h-full z-0;
  }

  .filter .bottom {
    background-image: url("/bottom.webp");
    
    @apply absolute bottom-0 w-full h-[160px] bg-repeat-x;
  }

  .noise {
    background-image: url("/noise.png");

    @apply absolute bottom-0 top-0 left-0 right-0 w-full h-full opacity-[50%] bg-repeat
  }

</style>
