---
import "../styles/global.css";

const { slug } = Astro.params
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>Component Playground</title>
  </head>

  <body class="container min-h-[100vh] flex flex-col">
    <header class="prose max-w-none pt-4">
      <h1 class="mb-0">Playground</h1>
      <h2 class="mt-0">{slug}</h2>
    </header>

    <main class="flex-grow grid content-center">
      <div
        class="p-24 m-auto mt-4 mb-4 bg-white border-2 border-dashed rounded-lg drop-shadow-md"
      >
        <div class="border-2 border-red-200 rounded-md">
          <slot />
        </div>
      </div>
    </main>

    <footer class="flex prose max-w-none pb-4">
      <div class="flex-grow">@itsadam</div>
      <div class="text-right">Reserved <strong>2023</strong></div>
    </footer>
  </body>
</html>
